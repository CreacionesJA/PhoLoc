<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.jad.pholoc.MainActivity" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@drawable/ic_logo" />

            <Button
                android:id="@+id/bt_addloc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imageView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:background="@drawable/btn_default"
                android:onClick="openNewLocation"
                android:text="@string/txt_btnnewloc"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_locations"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/bt_addloc"
                android:layout_alignRight="@+id/bt_addloc"
                android:layout_below="@+id/bt_addloc"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_default"
                android:minHeight="48dp"
                android:onClick="openLocations"
                android:padding="0dp"
                android:text="@string/txt_btlocations"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_gallery"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/bt_locations"
                android:layout_below="@+id/bt_locations"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_default"
                android:onClick="openPhotoGallery"
                android:text="@string/txt_btgallery"
                android:textColor="@color/white" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>